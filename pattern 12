*/
import java.util.*;
public class pattern12_prasandh {
public static void main(String [] args){

 Scanner s = new Scanner (System.in);
 int n = s.nextInt();
 int j,k,m=1;
 for(int i=0;i<n;i++)
 {
   for( k=m;k<n;k++)
   {
    System.out.print(" ");
   }
   for(j=n-m;j<n;j++)
   {
    System.out.print("* ");
   }
   m++;
   System.out.println(" ");
 }


}
}
